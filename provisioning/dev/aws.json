{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Stack for testing Job Runner Task",
    "Parameters": {},
    "Resources": {
        "TestKmsKey": {
            "Type" : "AWS::KMS::Key",
            "Properties" : {
                "Description": "KMS Key for runner tests",
                "Enabled": true,
                "KeyPolicy": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "Enable IAM User Permissions",
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:iam::",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            ":root"
                                        ]
                                    ]
                                }
                            },
                            "Action": "kms:*",
                            "Resource": "*"
                        }
                    ]
                }
            }
        },
        "JobRunnerS3LogsBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "LifecycleConfiguration": {
                    "Rules": [
                        {
                            "Id": "Delete debug files",
                            "Prefix": "debug-files/",
                            "ExpirationInDays": 7,
                            "Status": "Enabled"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "KeboolaStack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "JobRunnerUser": {
            "Type": "AWS::IAM::User",
            "DeletionPolicy": "Delete",
            "Properties": {
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "kms-key",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Action": [
                                        "kms:Encrypt",
                                        "kms:Decrypt",
                                        "kms:ReEncrypt*",
                                        "kms:GenerateDataKey*",
                                        "kms:DescribeKey"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::GetAtt": ["TestKmsKey", "Arn"]
                                        }
                                    ],
                                    "Effect": "Allow"
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "ecr",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Action": [
                                        "ecr:GetAuthorizationToken",
                                        "ecr:BatchCheckLayerAvailability",
                                        "ecr:GetDownloadUrlForLayer",
                                        "ecr:BatchGetImage"
                                    ],
                                    "Resource": "*",
                                    "Effect": "Allow"
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "UseS3BucketPolicy",
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Sid": "UseS3Bucket",
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:PutObject",
                                        "s3:GetObject",
                                        "s3:ListBucket",
                                        "s3:DeleteObject"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::Join": [
                                                "",
                                                [
                                                    "",
                                                    {
                                                        "Fn::GetAtt": [
                                                            "JobRunnerS3LogsBucket",
                                                            "Arn"
                                                        ]
                                                    },
                                                    "/*"
                                                ]
                                            ]
                                        },
                                        {
                                            "Fn::GetAtt": [
                                                "JobRunnerS3LogsBucket",
                                                "Arn"
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            },
            "DependsOn": ["TestKmsKey"]
        }
    },
    "Outputs": {
        "KmsKey": {
            "Value": {
                "Ref": "TestKmsKey"
            }
        },
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        },
        "S3LogsBucket": {
            "Value": {
                "Ref": "JobRunnerS3LogsBucket"
            }
        }
    }
}
