{
    "type": "project",
    "name": "keboola/job-runner",
    "description": "Job Runner Task",
    "keywords": [
        "queue",
        "runner",
        "job"
    ],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "keboola/api-error-control": "^3.8",
        "keboola/billing-api-php-client": "^1.0",
        "keboola/configuration-variables-resolver": "^3.0",
        "keboola/dockerbundle": "dev-miro-PS-3465",
        "keboola/input-mapping": "^16.0",
        "keboola/job-queue-internal-api-php-client": "dev-miro-PS-3465 as 10.7.0",
        "keboola/storage-api-client": "13.1.0",
        "keboola/object-encryptor": "^1.0",
        "keboola/output-mapping": "^18.0",
        "keboola/storage-api-php-client-branch-wrapper": "^3.0",
        "symfony/console": "^5.4",
        "symfony/dotenv": "^5.4",
        "symfony/flex": "^1.10",
        "symfony/framework-bundle": "^5.4",
        "symfony/monolog-bundle": "^3.7",
        "symfony/validator": "^5.4",
        "symfony/yaml": "^5.4"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/keboola/docker-bundle"
        }
    ],
    "require-dev": {
        "ext-zip": "*",
        "infection/infection": "^0.20",
        "keboola/coding-standard": ">=13.0.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12.17",
        "phpunit/phpunit": "^9.5.2",
        "sempro/phpunit-pretty-print": "^1.4",
        "symfony/browser-kit": "^5.4",
        "symfony/phpunit-bridge": "^5.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "process-timeout": 7200,
        "allow-plugins": {
            "infection/extension-installer": true,
            "symfony/flex": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "tests": "phpunit --cache-result-file=/tmp/.phpunit.result.cache",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "infection": "infection --threads=4 --min-covered-msi=60 --coverage=build/logs",
        "build": [
            "@phpstan",
            "@phpcs",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    }
}
