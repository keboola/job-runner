{
    "type": "project",
    "name": "keboola/job-runner",
    "description": "Job Runner ECS Task",
    "keywords": [
        "queue",
        "runner",
        "job"
    ],    
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "keboola/api-error-control": "^3.2",
        "keboola/object-encryptor": "^0.3",
        "keboola/dockerbundle": "dev-odin-library-2@dev",
        "keboola/job-queue-internal-api-php-client": "^3.1",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/flex": "^1.10",
        "symfony/framework-bundle": "4.4.*",
        "symfony/yaml": "4.4.*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/keboola/docker-bundle"
        }
    ],
    "require-dev": {
        "ext-zip": "*",
        "php-parallel-lint/php-parallel-lint": "^1.0",
        "keboola/coding-standard": ">=9.0.0",
        "phpstan/phpstan": "^0.12",
        "symfony/phpunit-bridge": "4.4.*",
        "symfony/test-pack": "^1.0",
        "infection/infection": "^0.20"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "process-timeout": 7200
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "tests": "php bin/phpunit",
        "get-parameters": "aws-parameter-filler .env /keboola/$KEBOOLA_STACK/job-queue-daemon/ $REGION",
        "phpstan": "phpstan analyse --no-progress --level=max src tests -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "phpcbf": "phpcbf --extensions=php src tests",
        "phplint": "parallel-lint -j 10 --exclude vendor --exclude bin .",
        "infection": "infection --threads=4 --min-covered-msi=60 --coverage=build/logs",
        "build": [
            "@phplint",
            "@phpcs",
            "@tests",
            "@phpstan"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]        
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
