{
    "type": "project",
    "name": "keboola/job-runner",
    "description": "Job Runner Task",
    "keywords": [
        "queue",
        "runner",
        "job"
    ],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "keboola/api-error-control": "^3.4.0",
        "keboola/billing-api-php-client": "^0.1",
        "keboola/configuration-variables-resolver": "^1.0.0",
        "keboola/dockerbundle": "dev-erik-PS-2507@dev",
        "keboola/job-queue-internal-api-php-client": "^7.1",
        "keboola/object-encryptor": "^0.3",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/flex": "^1.10",
        "symfony/framework-bundle": "4.4.*",
        "symfony/monolog-bundle": "^3.6",
        "symfony/yaml": "4.4.*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/keboola/docker-bundle"
        }
    ],
    "require-dev": {
        "ext-zip": "*",
        "infection/infection": "^0.20",
        "keboola/coding-standard": ">=13.0.0",
        "php-parallel-lint/php-parallel-lint": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12.17",
        "phpunit/phpunit": "^9.5.2",
        "symfony/browser-kit": "^4.4",
        "symfony/css-selector": "^4.4",
        "symfony/phpunit-bridge": "^5.3"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "process-timeout": 7200
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "tests": "phpunit --cache-result-file=/tmp/.phpunit.result.cache",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "phpcbf": "phpcbf --extensions=php src tests",
        "phplint": "parallel-lint -j 10 --exclude vendor --exclude bin .",
        "infection": "infection --threads=4 --min-covered-msi=60 --coverage=build/logs",
        "build": [
            "@phplint",
            "@phpstan",
            "@phpcs",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
